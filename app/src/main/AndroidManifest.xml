<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarkAndroidSample"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Demo Activities -->
        <activity
            android:name=".demos.ButtonDemoActivity"
            android:label="Button Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.TextFieldDemoActivity"
            android:label="Text Field Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.ImageDemoActivity"
            android:label="Image Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.CheckboxDemoActivity"
            android:label="Checkbox Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.RadioButtonDemoActivity"
            android:label="Radio Button Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.SwitchDemoActivity"
            android:label="Switch Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.SliderDemoActivity"
            android:label="Slider Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.ProgressBarDemoActivity"
            android:label="Progress Bar Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.SpinnerDemoActivity"
            android:label="Spinner Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.ListViewDemoActivity"
            android:label="List View Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.TabLayoutDemoActivity"
            android:label="Tab Layout Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.DialogDemoActivity"
            android:label="Dialog Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.ToastDemoActivity"
            android:label="Toast Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.WebViewDemoActivity"
            android:label="WebView Demo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demos.VideoPlayerDemoActivity"
            android:label="Video Player Demo"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>